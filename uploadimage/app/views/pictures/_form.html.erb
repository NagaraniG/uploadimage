<%= form_for @picture, :html => { :multipart => true } do |f| %>
<div class="field">
 <%= f.label :picture %>
    
    <%= f.file_field :avatar %>
    
</div>
<div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
</div>
  

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>